       <!--<item name="android:headerDayOfMonthTextAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>-->
        <item name="android:selectableItemBackground">@color/link_text_dark</item>
        <item name="colorAccent">@color/link_text_dark</item>

      <!--  <item name="android:dateTextAppearance">@android:style/TextAppearance.DeviceDefault</item>-->
        <item name="android:focusedMonthDateColor">@color/link_text_dark</item>
        <!--<item name="android:calendarViewStyle">calendar</item>-->
    </style>

    <style name="textstyle" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_margin">10dp</item>
    </style>

